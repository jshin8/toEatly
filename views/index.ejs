<!DOCTYPE html>
<html>
<head>
  <title>ToEat.ly</title>
  <meta charset="utf-8" />
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <!-- ToEat.ly -->
  <link rel="stylesheet" type="text/css" href="/static/css/main.css">
  <script src="/static/js/app.js"></script>
</head>
<body>
  <div id="page-wrapper" class="container">
    <header class="page-header">
      <h1>ToEat.ly <small>Put it in my belly!</small></h1>
    </header>
    <ul class= "list-group" id="food-ul">
      <% for(var i=0; i<foods.length; i++) { %>
      <li class="list-group-items">
      <h4 class="list-group-item-heading"><%= foods[i].name %></h4> <p class="list-group-item-text"><%= foods[i].yumminess %></p>
      <button data-id="<%=foods[i].id%>" type="button" action="submit" class="close">delete</button>
      </li>
      <% } %>
    </ul>
    
    <form action="/api/foods" method="POST" role="form">
      <legend>Post Food</legend>
    
      <div class="form-group">
        <label for="name">Name of Food</label>
        <input type="text" class="form-control" id="name" placeholder="Name of Food" name="name">
        <label for="name">Describe Yumminess</label>
        <input type="text" class="form-control" id="yum" placeholder="Describe Yumminess" name="yumminess">
      </div>

      <button type="submit" class="btn btn-primary" action="submit">toEatly</button>
    </form>

  </div>
</body>
</html>


